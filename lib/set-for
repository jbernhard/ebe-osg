#
# Fortran settings
#

# try to load Intel Fortran compiler
. /etc/profile.d/module.sh
module load intelf/11.1_072

# prefer Intel, fall back to GNU
if which ifort &> /dev/null; then
  FC=ifort
  FFLAGS="${FFLAGS} -O3 -ipo -no-prec-div -static -heap-arrays -axsse4.2,sse4.1 -msse2"
else
  FC=gfortran
  FFLAGS="${FFLAGS} -static"
fi

FFLAGS="${FFLAGS} -cpp"

echo $FC $FFLAGS
